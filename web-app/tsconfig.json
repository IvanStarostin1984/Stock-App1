{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "../packages/generated-ts/**/*.ts",
    "../packages/core/**/*.ts"
  ],
  "exclude": [
    "../packages/**/tests"
  ],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}

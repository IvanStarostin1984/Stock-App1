{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NewsArticle",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "url": { "type": "string", "format": "uri" },
    "source": { "type": "string" },
    "published": { "type": "string", "format": "date-time" }
  },
  "required": ["title", "url", "source", "published"]
}
